{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:8420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "vop",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "http":{
        "scope":[
          "http://**",
          "https://**"
        ]
      }
    },
    
    "bundle": {
      "active": true,
      "copyright": "GPLv3",
      "targets": "all",
      "identifier": "com.tauri.video",
      "longDescription": "A video software",
      "shortDescription": "Video App",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "./initData",
        "./expand"
      ],
      "windows": {
        "allowDowngrades": true,
        "certificateThumbprint": null,
        "digestAlgorithm": null,
        "nsis": {
          "displayLanguageSelector": true,
          "installerIcon": "icons/icon.ico",
          "license": "../LICENSE",
          "installMode": "both",
          "languages": ["SimpChinese", "TradChinese", "English"]
        },
        "timestampUrl": null,
        "tsp": false,
        "webviewFixedRuntimePath": null,
        "webviewInstallMode": {
          "silent": true,
          "type": "downloadBootstrapper"
        }
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": ["https://github.com/fangcongyang/video/releases/download/updater/update.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEM0RDcwRkQ4QTAzMzdDRjYKUldUMmZET2cyQS9YeEhEaXMvZE9hcHA3emtHejhNakZWbzlITFhTN3k4N3pUc2V4MFJ1Vm9TYVMK",
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      }
    }
  }
}
